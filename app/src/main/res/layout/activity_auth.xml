<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_auth"
    tools:context="eu.epitech.fernan_s.msa_m.yourimage.activity.AuthActivity"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:paddingStart="12dp"
    android:paddingEnd="12dp"
    android:paddingTop="12dp"
    android:paddingBottom="12dp">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="start|top"
        android:id="@+id/imgur_auth"
        android:src="@drawable/ic_imgur"
        />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center|top"
        android:id="@+id/flickr_auth"
        android:src="@drawable/ic_flickr"
        />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="end|top"
        android:id="@+id/pixiv_auth"
        android:src="@drawable/ic_pixiv"
        />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="start|center"
        android:id="@+id/px500_auth"
        android:src="@drawable/ic_500px"/>

</FrameLayout>
